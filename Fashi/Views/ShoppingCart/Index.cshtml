    <section class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="cart-table">
                        @if (ShoppingCart.Cart.Count == 0)
                        {
                            <h2>Giỏ Hàng Trống !</h2>
                        }
                        else
                        {
                            <table>
                                <thead>
                                    <tr>
                                        <th>Ảnh</th>
                                        <th class="p-name">Tên</th>
                                        <th>Giá</th>
                                        <th>Số Lượng</th>
                                        <th>Tổng</th>
                                        <th><i class="ti-close"></i></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var p in ShoppingCart.Cart.Items)
                                    {
                                        <tr>
                                            <td class="cart-pic first-row"><img src="img/cart-page/@p.anhmh" alt=""></td>
                                            <td class="cart-title first-row">
                                                <h5>@p.ten</h5>
                                            </td>
                                            <td class="p-price first-row">@p.giagiam</td>
                                            <td class="qua-col first-row">
                                                <div class="quantity">
                                                    <div class="pro-qty">
                                                        <span class="dec qtybtn">-</span>
                                                        <input type="number" name="name" value="@p.soluong" min="1" style="width:50px" data-update-cart="@p.id" />
                                                        <span class="inc qtybtn">+</span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="total-price first-row">@(p.soluong * p.giagiam) đ</td>
                                            <td class="close-td first-row"><i class="ti-close"></i></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>

                        }
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="cart-buttons">
                                <a href="#" class="primary-btn continue-shop">Continue shopping</a>
                                <a href="#" class="primary-btn up-cart">Update cart</a>
                            </div>
                            <div class="discount-coupon">
